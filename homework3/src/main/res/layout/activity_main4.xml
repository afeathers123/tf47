<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hzyc.zcm.homework3.Main4Activity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0033FF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新建联系人"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:id="@+id/title" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="修改"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#f6f0ef"
            android:layout_gravity="right|top"
            android:id="@+id/update" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="返回"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#f6f0ef"
            android:layout_gravity="left|top"
            android:id="@+id/updatback" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#51CA65"
        android:padding="5dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:text="修改头像" >
        </Button>

        <ImageView
            android:id="@+id/updateHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/image1" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:hint="姓名:"
            android:gravity="center"
            android:id="@+id/updateName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话："
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="#150d0b"
            android:layout_marginTop="150dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电话号码"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="140dp"
            android:id="@+id/updatePhone"/>

    </FrameLayout>

</LinearLayout>
